@model IEnumerable<RMS.Data.Objects.Entities.SystemMangement.Role>

@{
    ViewBag.Title = "RoleIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var x = 1;
}

<style>
    td {
        text-align: center;
        vertical-align: middle;
    }

    th {
        text-align: center;
        vertical-align: middle;
    }

    pad {
        padding-right: 10px;
    }
</style>



<div class="row mt">
    <div class="col-lg-12">
        <div class="content-panel">
            <a href="@Url.Action("CreateRole", "Account")" class="btn btn-primary btn-sm pull-right pad"><i style="color: red;" class="fa fa-2x fa-plus"></i> Add</a>
            <div style="padding: 20px;">
                <h2> ROLES </h2>
                <table class="table table-hover" id="myTable">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @(x++)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    <a class="btn btn-xs btn-primary" href="@Url.Action("EditRole", "Account", new { id = item.RoleId })"><i style="color: red"  class="fa fa-2x fa-edit"></i>Edit</a>
                                    <a class="btn btn-xs btn-danger" href="@Url.Action("DeleteRole", "Account", new { id = item.RoleId })"><i  class="fa fa-2x fa-trash"></i>Delete</a>
                                    <a class="btn btn-xs btn-info" href="@Url.Action("Permissions", "Account", new { id = item.RoleId })"><i  class="fa fa-2x fa-folder-open"></i>Permissions</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div><!-- /content-panel -->
    </div><!-- /col-lg-4 -->
</div><!-- /row -->


<script src="~/scripts/jquery-1.10.2.min.js" type="text/javascript"></script>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable({
            columnDefs: [
                {
                    targets: [0, 1, 2],
                    className: 'dataTable'
                }
            ]
        });
    });
</script>