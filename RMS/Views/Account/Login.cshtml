@model RMS.Models.LoginViewModel

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Log in";
}

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="content">
            <div class="row">
                <div style="padding-top: 200px; padding-left: 30px;" class=" col-md-offset-4 col-xs col-md-4">
                    <div class="card-header" data-background-color="purple">
                        <h3 style="padding-left: 70px;">Sign In Now</h3>
                        </div>
                            <form>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group label-floating">
                                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @Placeholder = "Username" })
                                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group label-floating">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @Placeholder = "Password" })
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <input type="submit" value="Login" class="btn btn-danger" />
                                <a class="btn btn-info" href="@Url.Action("Register", "Account")" >SignUp</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
 }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}