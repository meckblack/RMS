@model RMS.Data.Objects.Entities.Restaurant.FoodStuff

@{
    ViewBag.Title = "Create";
}

<!--MODAL HEADER-->
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Add FoodStuff</h3>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

<!--MODAL BODY-->
    <div class="modal-body">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 form-group">
                    <strong> @Html.LabelFor(model => model.Name, new { @class = "control-label " }) </strong>
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6 form-group">
                    <strong> @Html.LabelFor(model => model.MeasurementId, "Measurement", new { @class = "control-label" })</strong>
                    @Html.DropDownList("MeasurementId", null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
    </div>

<!--MODAL FOOTER-->
    <div class="modal-footer">
        <input type="submit" value="Add" class="btn btn-primary pull-left" />
    </div>
}

