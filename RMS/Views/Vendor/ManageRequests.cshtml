@model IEnumerable<RMS.Data.Objects.Entities.Vendor.Vendor>

@{
    ViewBag.Title = "ManageRequests";
    var x = 1;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    td {
        text-align: center;
        vertical-align: middle;
    }

    th {
        text-align: center;
        vertical-align: middle;
    }

    pad {
        padding-right: 10px;
    }
</style>

<div class="row mt">
    <div class="col-lg-12">
        <div class="content-panel">
            <a href="@Url.Action("Create", "Vendor")" class="btn btn-primary btn-sm pull-right pad" data-modal=""><i style="color: red;" class="fa fa-2x fa-plus"></i> Add</a>
            <div style="padding: 20px;">
                <h3> <strong> VENDOR REQUESTS </strong> </h3>
                <table class="table table-hover" id="myTable">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Phone Number
                            </th>
                            <th>
                                State
                            </th>
                            <th>
                                Address
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @(x++)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.State)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status) 
                                </td>
                                <td>
                                    <a href="@Url.Action("ApproveRequest", "Vendor", new { id = item.VendorId })" data-modal=""><i style="color: brown;" class="fa fa-2x fa-edit"></i></a>
                                    <a href="@Url.Action("Details", "Vendor", new { id = item.VendorId })" data-modal=""><i style="color: blue;" class="fa fa-2x fa-book"></i></a>
                                    <a href="@Url.Action("Delete", "Vendor", new { id = item.VendorId })" data-modal=""><i style="color: red;" class="fa fa-2x fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div><!-- /content-panel -->
    </div><!-- /col-lg-4 -->
</div><!-- /row -->
<!-- modal placeholder-->
<div id='myModal' class='modal fade in' data-backdrop="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'>
            </div>
        </div>
    </div>
</div>

<script src="~/scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
<script src="~/Theme/assets/js/RMS.js"></script>


<script>
    $(document).ready(function () {
        -
            $('#myTable').DataTable({
                columnDefs: [
                    {
                        targets: [0, 1, 2],
                        className: 'dataTable'
                    }
                ]
            });
    });
</script>

